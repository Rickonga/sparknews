  </head>

  <body>
    <!-- use flexbox to to occupy different part of the text within a div-->
    <%= render 'shared/flashes' %>
    <div class="page-wraper">
      <%= render 'pages/navbar_landing_page' %>
      <div class="main-container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
